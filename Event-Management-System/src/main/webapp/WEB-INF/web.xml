<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
    
    
    <servlet>
    <servlet-name>addBooking</servlet-name>
    <servlet-class>com.booking.InsertBookingServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>addBooking</servlet-name>
    <url-pattern>/insertBooking</url-pattern>
</servlet-mapping>

 <servlet>
    <servlet-name>updateeBooking</servlet-name>
    <servlet-class>com.booking.UpdateBookingServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>updateeBooking</servlet-name>
    <url-pattern>/updateBooking</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>deleteeBooking</servlet-name>
    <servlet-class>com.booking.DeleteBookingServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>deleteeBooking</servlet-name>
    <url-pattern>/deleteBooking</url-pattern>
</servlet-mapping>

<servlet>
         	<servlet-name>insertfeedback</servlet-name>
         	<servlet-class>com.feedback.InsertFeedback</servlet-class>
         </servlet>
         <servlet-mapping>
         	<servlet-name>insertfeedback</servlet-name>
         	<url-pattern>/feedback</url-pattern>
         </servlet-mapping>
         
         <servlet>
         	<servlet-name>updateefeedback</servlet-name>
         	<servlet-class>com.feedback.UpdateFeedback</servlet-class>
         </servlet>
         
         <servlet-mapping>
         	<servlet-name>updateefeedback</servlet-name>
         	<url-pattern>/updatefeedback</url-pattern>
         </servlet-mapping>
         
           <servlet>
         	<servlet-name>deleteefeedback</servlet-name>
         	<servlet-class>com.feedback.DeleteFeedback</servlet-class>
         </servlet>
         
         <servlet-mapping>
         	<servlet-name>deleteefeedback</servlet-name>
         	<url-pattern>/deletefeedback</url-pattern>
         </servlet-mapping>
    
</web-app>
